<!DOCTYPE html>
<html>
  <%- include('./partials/head' , {titulo : "Detalle" + plato.id}) %>
  <body>
    <%- include('./partials/header') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%=plato.nombre%></h1>
          <br />
          <h4><%=plato.detalle%></h4>
          <p class="ps-text-grey">
            U$S <%=plato.precio%>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src=<%=plato.imagen%>
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer')%>
      
    </div>
  </body>
</html>
